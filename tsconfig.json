{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "outDir": "out",
    "composite": true,
    "removeComments": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules"]
}
